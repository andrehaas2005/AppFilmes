@model IEnumerable<AppFilmes.Models.Filme>

@{
    ViewBag.Title = "Index";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

@*<link href="~/Content/themes/2ColPortFolio/CSS/bootstrap.min.css" rel="stylesheet" />*@
<link href="~/Content/themes/2ColPortFolio/CSS/3-col-portfolio.css" rel="stylesheet" />
<h2>Filmes</h2>

<div class="container">
    <div class="col-md-12">
        <h1 class="page-header">
            Page Heading
            <small>Secondary Text</small>
        </h1>
    </div>
    <!-- Page Header -->
    <div class="row">


        <!-- /.row -->
        <!-- Projects Row -->
        @foreach (var item in Model)
        {

            <div class="col-md-4 portfolio-item">
                <div style="height: 600px;">
                    <a href=" #" class="">
                        <img src="http://image.tmdb.org/t/p/w500/@Html.DisplayFor(modelItem => item.PosterPath) " alt="" style="width: 150px;height: 225px;">

                        <h3>
                            <a href="#">@Html.DisplayFor(modelItem => item.Title)</a>
                        </h3>
                        @Html.DisplayFor(modelItem => item.Overview)

                    </a>
                </div>
            </div>


        }
    </div>
    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2016</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>

<script src="~/Content/themes/2ColPortFolio/js/jquery.js"></script>
<script src="~/Content/themes/2ColPortFolio/js/bootstrap.min.js"></script>

