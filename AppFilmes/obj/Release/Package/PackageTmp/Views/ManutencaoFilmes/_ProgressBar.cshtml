    function atualizarDefinicao() {
        $.ajax({
            type: 'GET',
            url: '/ManutencaoFilmes/progressBarFilmes',
            dataType: 'html',
            cache: false,
            async: true,
            success: function (data) {
                $('#barra').html(data);
