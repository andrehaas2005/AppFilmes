<script type="text/javascript">
    function atualizarDefinicaoGenero() {
        $.ajax({
            type: 'GET',
            url: '/ManutencaoFilmes/progressBarGenero',
            dataType: 'html',
            cache: false,
            async: true,
            success: function (data) {
                $('#barragenero').html(data);
            }
        });
    }
    $(document).ready(function () {
        setInterval(atualizarDefinicaoGenero, 1000);
    });
</script>

