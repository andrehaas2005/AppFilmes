<div id="carousel-foto-generic" class="carousel slide" data-ride="carousel">

  
</div>



<p>
    @Html.ActionLink("Edit", "Edit", null, new { id = Model.FilmeId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</p>


<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: 'POST',
            url: '/Filmes/strCarrossel/@Model.FilmeId',
            dataType: 'html',
            success: function (data) {
                $('#carousel-foto-generic').html(data);
            }
        });

    });
</script>